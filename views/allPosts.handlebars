<div class="posts-container">
  {{#each allPosts}}
  <div class="post-card">
    <div>
      <h2> 
        <a href="/post/{{id}}">{{title}}</a> 
      </h2>
    <div>
       <p>Posted by {{User.username}}</p>
    </div>
    </div>
    <div class="card-body">
      {{body}}
    </div>
  </div>
  {{/each}}
</div>