<div class="posts-container">
  <div class="post-card">
    <div class="card-header">
      <h2>{{post.title}}</h2>
      <div class="card-data">
        Posted by {{post.user.username}} on {{postDate post.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{post.body}}
    </div>
  </div>

  {{#if post.comments}}
    <section class="post-card">

      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div >
        {{#each post.comments}}
          <div class="card-body">
            <p>
              {{body}}
            </p>
            <p class="card-data">
              &mdash; {{user.username}}, {{postDate createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="post-card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />
      <label class="form-label" for="comment-body">Comment</label>
      <textarea name="comment-body" class="form-input"></textarea>
      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>